<% content_for :title, '用户登录' %>
<script>
    function popoverInput(obj, msg, pos){
        $(obj).focus();
        $(obj).popover({
            content: msg,
            placement: pos
        });
        $(obj).popover('show');
        window.setTimeout(function(){
            $(obj).popover('destroy');
        }, 3000);
    }

    $(function () {
        $('#form_login').submit(function(){
            var username = $('#username');
            var password = $('#password');
            if($.trim(username.val()) == ''){
                popoverInput(username, '请输入用户名！', 'top');
                return false;
            }
            else if($.trim(password.val()) == ''){
                popoverInput(password, '请输入密码！', 'top');
                return false;
            }
            return true;
        });
    });
</script>
<div>
  <%= flash[:error] %>
</div>
<div class="container" style="margin-top: 100px;width: 90%;">
  <div class="row">
      <div class="col-md-8">
            <div class="col-md-9">
                <%= form_tag(login_path, :class => "form-horizontal", :id => "form_login", :method => "post") do %>
                    <div class="form-group">
                      <label for="username" class="col-md-3 hidden-sm control-label">用户名</label>
                      <div class="col-sm-12 col-md-9">
                        <input type="text" class="form-control" name="username" id="username" value="<%= @username %>" placeholder="请输入用户名" tabindex="1" />
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="password" class="col-md-3 hidden-sm control-label">密码</label>
                      <div class="col-sm-12 col-md-9">
                        <input type="password" class="form-control" name="password" id="password" value="<%= @password %>" placeholder="请输入密码" tabindex="2" />
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-md-3 hidden-sm">&nbsp;</label>
                      <div class="col-sm-12 col-md-9">
                        <button type="submit" class="btn btn-success btn_submit">&nbsp;&nbsp;&nbsp;立即登录&nbsp;&nbsp;&nbsp;</button>
                      </div>
                    </div>
                <% end %>
            </div>
        </div>
  </div>
</div>


