<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="pin-button">
    <a href="#" class="ui blue inverted button right-floated">注册</a>
  </div>
  <img src='<%= image_path('night.jpg') %>' class="login-background">
  <div class="login-content">
    <div class="login-form">
      <%= form_tag(login_path, :class => 'form-horizontal', :id => 'login_form', :method => 'post') do %>
        <div class="ui form basic segment">
          <% if flash[:error] %>
            <div class="ui error visible message">
              <%= flash[:error] %>
            </div>
          <% end %>
          <div class="field">
            <input type="text" name="username" id="username" placeholder="用户名"/>
          </div>
          <div class="field">
            <input type="password" name="password" id="password" placeholder="密码"/>
          </div>
          <div class="field">
            <div class="ui toggle checkbox green">
              <input type="checkbox" name="remember"/>
              <label for="remember">记住我</label>
            </div>
            <a href="#" class="forget-password right-floated">忘记密码?</a>
          </div>
          <button class="ui green fluid button">登录</button>
        </div>
      <% end  %>
    </div>
  </div>
  <script type="text/javascript" charset="utf-8">
    $('#login_form').form({
      on: 'blur',
      inline: true,
      fields: {
        username: {
          identifier: 'username',
          rules: [
            {
              type: 'empty',
              prompt: '用户名不能为空'
            }
          ]
        },
        password: {
          identifier: 'password',
          rules: [
            {
              type: 'empty',
              prompt: '密码不能为空'
            }
          ]
        }
      }
    });
    var backgroundImg = $('.login-background')[0];
    if ('undefined' != typeof backgroundImg && null !== backgroundImg) {
      backgroundImg.onload = function () {
        new RainyDay({image: backgroundImg}).rain([[3, 2, 2]], 100);
      };
      backgroundImg.crossOrigin = 'anonymous';
    }
  </script>
</body>
</html>
